<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TennisMatchGenerator.MatchDayPage"
             xmlns:models="clr-namespace:TennisMatchGenerator.Models"
             Title="MatchDayPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout>
            <VerticalStackLayout>
                <VerticalStackLayout>
                    <Button
                        Text="Add Next"
                        Command="{Binding AddPlayerCommand}"
                        HorizontalOptions="Center" />

                    <ListView x:Name="ListViewItems"
                      ItemsSource="{Binding AvailablePlayers}">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="models:Player">
                                <TextCell Text="{Binding FirstName}" />
                                <!--<TextCell Text="{Binding LastName}" />-->
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </VerticalStackLayout>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>